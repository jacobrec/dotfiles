screen () {
    xrandr --auto;
    xrandr --output DP-1-1-2 --auto;
    xrandr --output DP-1-2-2 --auto;
    xrandr --output DP-1-2-2 --right-of eDP-1-1;
    xrandr --output DP-1-1-2 --left-of eDP-1-1;
    feh --randomize --bg-fill ~/Pictures/wallpapers/*
}

home () {
    xrandr --auto;
    xrandr --output DP1 --auto;
    xrandr --output eDP1 --auto;
    xrandr --output eDP1 --left-of DP1
    feh --randomize --bg-fill ~/Pictures/wallpapers/*
}

welcome_message () {
    len=`todo -count`
    if true; then
        todo | sbcl --script /data/Coding/lisp/printbox/main.lisp
        cat /data/Coding/lisp/printbox/steg.txt
    else
        printf 'Good work Jacob!\n\nNo tasks todo for now\n' | cowsay -f stegosaurus
    fi
}

pcode () {
    out=$2
    if [ -z "$out" ]; then
        out="tmp.ps"
    fi
    enscript $1 -p $out --borders --landscape --line-numbers --columns=2
}

awake () {
    while true; do
        echo "Keeping awake"
        echo "Mouse May move randomly"
        xdotool mousemove 0 100
        sleep 60
        xdotool mousemove 0 50
        sleep 60
    done
}

gui_open () {
    # TODO: make window reopen in correct spot
    # currently when emacs is closed, the other window will be expanded
    # then this window will be readded at the end.
    {
      id=`xdotool getactivewindow`
      "$@" &
      sleep 0.35
      i3-msg [id=$id] move scratchpad
      wait
      i3-msg [id=$id] scratchpad show
      i3-msg [id=$id] floating toggle
    } &> /dev/null
}

emacs () {
  gui_open /usr/bin/emacs "$@"
}

search() {
    # pdfgrep -nir "$*" ./*
    find . -type f -iname '*.pdf' -exec pdfgrep "$*" -in {} +
};

source ~/.please.bash
source ~/.projects.sh

